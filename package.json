{
  "name": "@thecapylab/capykit",
  "version": "0.1.0",
  "description": "CapyKit is an opinionated Vue Component Library",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheCapyLab/CapyKit.git"
  },
  "keywords": [
    "Vue",
    "Component",
    "Library"
  ],
  "author": "TheCapyLab",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TheCapyLab/CapyKit/issues"
  },
  "homepage": "https://github.com/TheCapyLab/CapyKit#readme",
  "scripts": {
    "build": "npm run component:exports:generate",
    "dev:pack": "npm pack",
    "dev:link": "npm link @thecapylab/capykit",
    "version:patch:increment": "node scripts/increment-version.js patch",
    "version:minor:increment": "node scripts/increment-version.js minor",
    "version:major:increment": "node scripts/increment-version.js major",
    "component:exports:generate": "node scripts/generate-exports.js",
    "component:exports:list": "node scripts/list-components.js",
    "component:add": "node scripts/add-component.js",
    "component:remove": "node scripts/remove-component.js",
    "docs:dev": "npm run docs:update-all && vitepress dev docs",
    "docs:build": "npm run docs:update-all && vitepress build docs",
    "docs:preview": "npm run docs:update-all && vitepress preview docs",
    "docs:update-all": "node docs/build-scripts/update-versions.cjs && node docs/build-scripts/generate-sidebar.cjs && node docs/build-scripts/show-structure.cjs",
    "docs:update-versions": "node docs/build-scripts/update-versions.cjs",
    "docs:update-sidebar": "node docs/build-scripts/generate-sidebar.cjs",
    "docs:show-structure": "node docs/build-scripts/show-structure.cjs"
  }
}