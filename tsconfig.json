{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": false,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Vue specific */
    "jsx": "preserve",

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@capykit/core": ["packages/core/src"],
      "@capykit/composables": ["packages/composables/src"],
      "@capykit/capykit": ["packages/capykit/src"]
    }
  },
  "include": [
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.d.ts",
    "packages/*/src/**/*.tsx",
    "packages/*/src/**/*.vue",
    "scripts/**/*.js",
    "vite.config.*.ts"
  ],
  "exclude": ["node_modules", "**/dist", "**/node_modules"]
}
